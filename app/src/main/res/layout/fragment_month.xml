<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".HuPlaActivity$PlaceholderFragment"
    android:orientation="vertical">



    <CalendarView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="top"
        android:id="@+id/calendar_view">

        <ImageButton
            android:id="@+id/button_current_day"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="30dp"
            android:src="@drawable/calendar_today"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:layout_gravity="left"/>
    </CalendarView>


    <TableLayout
        android:id="@+id/table_layout_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/label_morning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/label_morning"/>


            <TextView
                android:id="@+id/label_noon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/label_noon"/>


            <TextView
                android:id="@+id/label_evening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/label_evening"/>

        </TableRow>


        <TableRow
            android:id="@+id/table_row_month_image_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/image_button_morning"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:scaleType="fitCenter"
                android:src="@drawable/dog"
                />

            <ImageButton
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/image_button_noon"
                android:layout_height="110dp"
                android:layout_width="110dp"
                android:scaleType="fitCenter"
                android:src="@drawable/heart"
                />


            <ImageButton
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/image_button_evening"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:scaleType="fitCenter"
                android:src="@drawable/circle_blue"
                />

        </TableRow>

        </TableLayout>



</LinearLayout>
